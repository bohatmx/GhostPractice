    </style>

    <style name="PinkTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowTitleStyle">@style/actionBarStyle</item>
        <item name="colorPrimary">@color/pink_800</item>
        <item name="colorPrimaryDark">@color/pink_900</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="IndigoTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowTitleStyle">@style/actionBarStyle</item>
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryDark">@color/indigo_700</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="CyanTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowTitleStyle">@style/actionBarStyle</item>
        <item name="colorPrimary">@color/cyan_800</item>
        <item name="colorPrimaryDark">@color/cyan_900</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="OrangeTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowTitleStyle">@style/actionBarStyle</item>
        <item name="colorPrimary">@color/orange_800</item>
        <item name="colorPrimaryDark">@color/orange_900</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="PurpleTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowTitleStyle">@style/actionBarStyle</item>
        <item name="colorPrimary">@color/purple_800</item>
        <item name="colorPrimaryDark">@color/purple_900</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTitleStyle">@style/actionBarStyle</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/background_floating_material_dark</item>
    </style>
    <style name="Pager">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PagerSmall">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="actionBarStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>